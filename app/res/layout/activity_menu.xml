<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:gravity="center">
	    <Button
	        android:id="@+id/loginGPlus"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
			android:layout_centerHorizontal="true"
			android:onClick="showLoginGoogle"
	        android:text="Login con Google Plus" />
	
	    <Button
	        android:id="@+id/directorio"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/loginGPlus"
	        android:layout_centerHorizontal="true"
	        android:onClick="showDirectorio"
	        android:text="Directorio" />
	</RelativeLayout>
</RelativeLayout>